<h2>Contact me</h2>
{{#if isSent}}
  <div class="isSent">The message has been sent!
    Filename {{filename}} has been saved!
	<img src="{{path}}">
  </div>
{{/if}}
{{#if isError}}
  <div class="isError">You can't leave fields empty!</div>
{{/if}}
{{#if wrongFileFormat}}
  <div class="wrongFileFormat">Wrong file format!</div>
{{/if}}
<form action="/contact" method="POST" enctype="multipart/form-data">
  <label>
    Your name: <input type="text" name="author">
  </label>
  <label>
    Your email: <input type="email" name="sender">
  </label>
  <label>
    Title: <input type="text" name="title">
  </label>
   <label>
    Message: <textarea name="message"></textarea>
  </label>
   <label>
    Project design: <input type="file" name="projectDesign" accept="image/jpg, image/jpeg, image/png, image/gif">
  </label>
  <button type="submit">Send message</button>
</form>
